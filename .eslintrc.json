{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false,
            "experimentalObjectRestSpread": false
        }
    },
    "env": {
        "node": true,
        "mocha": true,
        "commonjs": true
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "handle-callback-err": [
            "error"
        ]
    }
}